<UserControl x:Class="Evaluator.SliderFS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Evaluator"
             mc:Ignorable="d" Height="48.039" Width="494.118" 
             DataContext="{Binding}"
            >


    <Grid x:Name="grid" Background="#00000000" >
        <Popup Name="floatingTipTime" AllowsTransparency="True" Placement="Relative" >
            <TextBlock x:Name="popupTextTime"></TextBlock>
        </Popup>
        
        <Popup Name="floatingTip" AllowsTransparency="True" Placement="Relative" >            
            <TextBlock x:Name="popupText"></TextBlock>
        </Popup>
        <Canvas x:Name="canvas"  Background="#00000000">
      
    </Canvas>
    </Grid>
</UserControl>
